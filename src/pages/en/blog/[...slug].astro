---
import BaseEnLayout from "../../../layouts/BaseEnLayout.astro";
import FormattedDate from "../../../components/FormattedDate.astro";

import { type CollectionEntry, getCollection } from "astro:content";
import { render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blogEn");
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<"blogEn">;

const post = Astro.props;
const { Content } = await render(post);
---

<BaseEnLayout title={post.data.title} description={post.data.description}>
  <article class="article-post">
    <Content />
  </article>
</BaseEnLayout>

<style is:inline>
  .article-post {
    p:has(img) {
      width: 100%;
      display: flex;
      justify-content: center;
    }
    h1 {
      font-weight: bold;
      margin-bottom: 20px;
    }

    h2,
    h3,
    h4,
    h5 {
      position: relative;
      margin: 40px 0;
      padding-left: 40px;
      font-weight: bold;

      &::before {
        content: "#";
        position: absolute;
        left: 0px;
      }
    }

    h1,
    h3 {
      @media (max-width: 768px) {
        font-size: 25px;
      }
    }

    pre {
      margin-bottom: 20px;
    }

    a {
      color: var(--l-bg-purple);
      text-decoration: underline;
      text-underline-offset: 8px;
    }

    strong {
      padding: 2px 10px;
      border-radius: 5px;
      color: var(--color-orange-50);
      background-color: var(--color-green-500);
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding-left: 0;
    }

    li {
      background-color: #ffeded;
      border-bottom-right-radius: 1rem;
      border-left: 0.4rem solid #007bff;
      border-top-right-radius: 1rem;
      margin: 1rem 0;
      padding: 1rem 1.5rem;
      transition:
        color 0.3s ease,
        background-color 0.3s ease,
        border-left-color 0.3s ease;
    }
  }

  table {
    display: block;
    width: 91.25%;
    margin: 20px 0;
    overflow-x: auto;
    white-space: nowrap;
    border: var(--l-bg-purple) 0.1rem solid;
    border-radius: 1.4rem;
  }

  thead {
    white-space: nowrap; /* Запрещаем перенос строк в заголовках */
  }

  tbody {
    overflow-y: hidden;
  }

  table {
    display: block;
  }

  table th {
    position: sticky;
    top: 0;
    padding: 1.5rem 3.5rem;
  }

  table tr {
    padding-left: 2rem;
    text-align: center;
  }

  table td:first-child {
    padding-left: 2rem;
    text-align: left;
    border-left: 0;
  }

  table td {
    padding: 1.5rem 3.5rem;
    border-radius: 0.1rem;
    border-top: 1px solid var(--l-bg-purple);

    &:not(:last-child) {
      border-right: 1px solid var(--l-bg-purple);
    }
  }

  table tr td {
    transition: 0.3s ease;
  }

  table tr:hover td {
    color: var(--black-2);
    background: var(--scroll-bar);
  }

  html.dark .article-post li {
    background-color: #332d2d;
  }
</style>
